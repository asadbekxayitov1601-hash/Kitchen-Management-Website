generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id           Int      @id @default(autoincrement())
  name         String?
  email        String   @unique
  passwordHash String
  isAdmin      Boolean  @default(false)
  createdAt    DateTime @default(now())
  pantryItems  PantryItem[]
  shoppingItems ShoppingItem[]
  recipes      Recipe[]
  favorites    Favorite[]
}

model PantryItem {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  name      String
  status    String
  category  String
  quantity  String?
  createdAt DateTime @default(now())
}

model ShoppingItem {
  id         Int      @id @default(autoincrement())
  userId     Int
  user       User     @relation(fields: [userId], references: [id])
  name       String
  quantity   String
  recipeId   String?
  recipeName String?
  checked    Boolean  @default(false)
  createdAt  DateTime @default(now())
}

model Recipe {
  id                 Int      @id @default(autoincrement())
  title              String
  image              String
  cookTime           String
  servings           Int
  category           String
  ingredients        String
  instructions       String
  youtubeUrl         String?
  status             String   @default("pending") // pending, approved, rejected
  userId             Int
  user               User     @relation(fields: [userId], references: [id])
  favorites          Favorite[]
  createdAt          DateTime @default(now())
}

model Favorite {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  recipeId  Int
  recipe    Recipe   @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, recipeId])
}
